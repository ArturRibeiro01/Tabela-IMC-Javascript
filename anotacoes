// Exemplo de função anonima
titulo.addEventListener("click", function(){
  console.log("Sou uma arrow function anonima");
}


Exemplo de uma arrow function
titulo.addEventListener("click",() =>{
  console.log("Sou uma arrow function anonima");
}
